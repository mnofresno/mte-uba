<%= form_for @unidad_chofer, as: :unidad_chofer, url: unidad_unidad_choferes_path(@unidad_chofer.unidad_id), method: :post, :html => { :class => "form-horizontal unidad" } do |f| %>

  <% if @unidad_chofer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@unidad_chofer.errors.count, "error") %> prohibited this chofer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @unidad_chofer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :chofer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:chofer_id, Chofer.all.collect {|u| [u.nombre, u.id]}, { :prompt => true }, {:class => "form-control"}) %>
    </div>
    <%=f.error_span(:chofer_id) %>
  </div>

  <div class="form-group">
    <%= f.label :turno_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:turno_id, Turno.all.collect {|u| [u.descripcion, u.id]}, { :prompt => true }, {:class => "form-control"}) %>
    </div>
    <%=f.error_span(:turno_id) %>
  </div>
  
  <%= f.hidden_field(:unidad_id) %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                choferes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
