<%- model_class = NotaReparacion -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>    
      <th><%= model_class.human_attribute_name(:numeroserie) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @notas_reparaciones.each do |nota_reparacion| %>
      <tr>
        <td><%= nota_reparacion.numeroserie %></td>
        <td><%= nota_reparacion.fecha %></td>
        <td><%= nota_reparacion.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      nota_reparacion, :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_nota_reparacion_path(nota_reparacion), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      nota_reparacion_path(nota_reparacion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_nota_reparacion_path,
            :class => 'btn btn-primary' %>
