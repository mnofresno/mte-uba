<%= form_for @chofer, :html => { :class => "form-horizontal chofer" } do |f| %>

  <% if @chofer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@chofer.errors.count, "error") %> prohibited this chofer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @chofer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nombre) %>
  </div>
  <div class="form-group">
    <%= f.label :apellido, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :apellido, :class => 'form-control' %>
    </div>
    <%=f.error_span(:apellido) %>
  </div>
  <div class="form-group">
    <%= f.label :radio, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :radio, :class => 'form-control' %>
    </div>
    <%=f.error_span(:radio) %>
  </div>
  <div class="form-group">
    <%= f.label :taller_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:taller_id, Taller.all.collect {|u| [u.nombre, u.id]}, { :prompt => true }, {:class => "form-control"}) %>
    </div>
    <%=f.error_span(:taller_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                choferes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
