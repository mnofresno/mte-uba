<%- model_class = Chofer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @chofer.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellido) %>:</strong></dt>
  <dd><%= @chofer.apellido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:radio) %>:</strong></dt>
  <dd><%= @chofer.radio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:taller_id) %>:</strong></dt>
  <dd><%= @chofer.taller.nombre %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              choferes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_chofer_path(@chofer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              chofer_path(@chofer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
