<%= form_for @unidad, :html => { :class => "form-horizontal unidad" } do |f| %>

  <% if @unidad.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@unidad.errors.count, "error") %> prohibited this unidad from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @unidad.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :patente, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :patente, :class => 'form-control' %>
    </div>
    <%=f.error_span(:patente) %>
  </div>
  <div class="form-group">
    <%= f.label :marca, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :marca, :class => 'form-control' %>
    </div>
    <%=f.error_span(:marca) %>
  </div>
  <div class="form-group">
    <%= f.label :año, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :año, :class => 'form-control' %>
    </div>
    <%=f.error_span(:año) %>
  </div>

  <div class="form-group">
    <%= f.label :fueraDeServicio, :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.check_box :fueraDeServicio, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fueraDeServicio) %>
  </div>

  <div class="form-group">
    <%= f.label :taller_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select(:taller_id, Taller.all.collect {|u| [u.nombre, u.id]}, { :prompt => true }, {:class => "form-control"}) %>
    </div>
    <%=f.error_span(:taller_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                unidades_path, :class => 'btn btn-default' %>
    </div>
  </div>


<% end %>
