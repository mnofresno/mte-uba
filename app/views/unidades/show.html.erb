<% content_for(:title, Unidad.model_name.human.titlecase) %>

<% content_for(:breadcrumbs) do %>
  <%= breadcrumbs do |b|
    b.item Unidad.model_name.human, unidades_path
    b.item @unidad.patente, root_path, :active => true
  end %>
<%end%>

<%= render 'sidebar' %>

<%= render 'datos_unidad' %>

<%= render 'choferes', :obj_to_show => @unidad  %>

<%= render 'nota_pedido', :obj_to_show => @unidad %>

<%= render 'nota_reparacion', :obj_to_show => @unidad %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              unidades_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_unidad_path(@unidad), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              unidad_path(@unidad),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
